<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
<h3>Create a new listing</h3>
<form action="/listings" method="post">
    <div class="mb-3">
        <label for="title" class="form-label" >Title</label>
        <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control">    
    </div>
    <div class="mb-3">
        <label for="description" class="form-label" >Description</label>
        <textarea name="listing[description]" name="description" class="form-control" id="" cols="30" rows="10"></textarea>
    </div>
    
    <div class="mb-3">
        <label for="image" class="form-label" >Image Link</label>
        <input type="text" name="listing[image]" class="form-control" placeholder="Enter image URL/ink">
    </div>

    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label" >Price</label>
            <input type="number" class="form-control" name="listing[price]" placeholder="1500">
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label" >Country</label>
            <input type="text" name="listing[country]" class="form-control" placeholder="India">
        </div>
    </div>
    
    <div class="mb-3">
        <label for="location" class="form-label" >Location</label>
        <input type="text" name="listing[location]" class="form-control" placeholder="Mumbai, Maharashtra">
    </div>
    
    <br><br>
    <button class="btn btn-dark add-btn">Add</button>
    <br><br>
</form>
</div>
</div>
